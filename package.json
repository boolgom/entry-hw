{
    "name": "entry_hw",
    "version": "1.6.25",
    "description": "엔트리 하드웨어 연결 프로그램1",
    "author": "EntryLabs",
    "main": "app/index.js",
    "scripts": {
        "lint": "eslint app",
        "clean": "rimraf dist",
        "start": "set NODE_ENV=development&&electron -d app",
        "pack:win32": "build --arch ia32",
        "make": "cross-env CSC_NAME=\"Developer ID Application: Connect Foundation (DLFUSDA3L5)\"&&build",
        "make:osx": "cross-env CSC_NAME=\"Developer ID Application: Connect Foundation (DLFUSDA3L5)\"&&build",
        "make:win32": "build --arch ia32 --platform=win32 && makensis ./build/entry-hw.nsi"
    },
    "build": {
        "mac": {
            "target": "dmg",
            "category": "public.app-category.education",
            "extendInfo": {
                "URL Types": [
                    {
                        "URL Identifie": "org.playentry.entryhw",
                        "URL Schemes": [
                            "entryhw"
                        ]
                    }
                ],
                "CFBundleURLTypes": [
                    {
                        "CFBundleURLName": "org.playentry.entryhw",
                        "CFBundleURLSchemes": [
                            "entryhw"
                        ]
                    }
                ]
            }
        },
        "dmg": {
            "icon": "build/icon.icns",
            "iconSize": 80,
            "background": "build/background.png",
            "contents": [
                {
                    "x": 240,
                    "y": 120
                },
                {
                    "x": 240,
                    "y": 380,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "win": {
            "target": "dir"
        },
        "asar": true,
        "appId": "org.playentry.entryhw",
        "productName": "Entry_HW"
    },
    "devDependencies": {
        "cross-env": "^5.1.3",
        "electron": "1.7.11",
        "electron-builder": "^19.52.1",
        "electron-packager": "^8.1.0",
        "eslint-config-prettier": "^2.9.0",
        "eslint-plugin-prettier": "^2.6.0",
        "prettier": "^1.11.1",
        "rimraf": "^2.5.4"
    },
    "dependencies": {
        "bindings": "^1.2.1",
        "debug": "^2.2.0",
        "es6-promise": "^3.2.1",
        "eslint": "^4.18.2",
        "lodash": "^4.16.4",
        "object.assign": "^4.0.4",
        "socket.io": "^1.5.0",
        "socket.io-client": "^1.5.1"
    }
}
